{
    "name": "reaqta-api-client-javascript",
    "version": "0.0.1",
    "description": "An example JavaScript client for interacting with the ReaQta-Hive API",
    "main": "index.js",
    "repository": "git@github.com:ReaQta/yogi-client-javascript.git",
    "author": "Brett Beutell <b.beutell@reaqta.com>",
    "license": "MIT",
    "dependencies": {
        "axios": "^0.21.1"
    },
    "devDependencies": {
        "colors": "^1.4.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.21.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-jest": "^24.2.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.3.1",
        "husky": "^5.2.0",
        "jest": "^26.6.3",
        "jsdoc": "^3.6.6",
        "pinst": "^2.1.6"
    },
    "scripts": {
        "postinstall": "husky install",
        "prepublishOnly": "pinst --disable",
        "postpublish": "pinst --enable",
        "docs": "jsdoc -d ./docs -R README.md -c ./jsdocconfig.json ./lib",
        "smoketest:qa": "node smoketest.qa.js",
        "smoketest:local": "node smoketest.local.js"
    },
    "jest": {
        "collectCoverage": false,
        "collectCoverageFrom": [
            "src/**/*.+(ts|js)"
        ],
        "roots": [
            "<rootDir>"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.+(ts|js)",
            "**/?(*.)+(spec|test).+(ts|js)"
        ]
    }
}
